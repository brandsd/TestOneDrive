@model TestOneDrive.Models.ViewModel.SignUpUserViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container">
    <div class="row mt-lg-3">
        <div class="col-6 offset-3 border border-primary rounded pl-5 pr-5 pb-5">
            <form method="post" asp-action="SignUp">
                <div class="text-center">
                    <h1 class="text-info">NEW USERS</h1>
                </div>
                <h5 class="text-danger text-center ">@TempData["ErrorMessage"]</h5>

                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input type="text" asp-for="Username" placeholder="Enter Username" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="text" asp-for="Email" placeholder="Enter Email" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MobileNumber"></label>
                    <input type="text" asp-for="MobileNumber" placeholder="Enter Mobile Number" class="form-control" autocomplete="off" />
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" asp-for="Password" placeholder="Enter Password" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input type="password" asp-for="ConfirmPassword" placeholder="Enter Confirm Password" class="form-control" autocomplete="off" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                </div>


                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg mb-1 float-right" value="Registration" style='margin-right:20px'>Registration </button>
                    
                    <button type="submit" asp-action="Login" class="btn btn-success btn-lg mb-1 float-right" value="BACK" style='margin-right:20px'>BACK</button>
                </div>

            </form>


        </div>

    </div>

</div>

